<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="80dp"
        android:src="@drawable/ic_logo_verynice"
        android:contentDescription="@string/logo_view" />

    <EditText
        android:id="@+id/search_fragment_text_field"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:maxLines="1"
        android:inputType="text"
        android:layout_marginHorizontal="60dp"
        android:background="@drawable/search_edit_text_shape"
        android:padding="8dp"
        android:hint="@string/search"
        android:autofillHints="Search" />

    <Button
        android:id="@+id/search_fragment_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="@string/search" />

    <Button
        android:id="@+id/search_fragment_history_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="@string/history" />

</LinearLayout>